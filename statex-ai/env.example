NLP_SERVICE_EXTERNAL_PORT=8011
NLP_SERVICE_INTERNAL_PORT=8011
ASR_SERVICE_EXTERNAL_PORT=8012
ASR_SERVICE_INTERNAL_PORT=8012
DOCUMENT_AI_EXTERNAL_PORT=8013
DOCUMENT_AI_INTERNAL_PORT=8013
PROTOTYPE_GENERATOR_EXTERNAL_PORT=8014
PROTOTYPE_GENERATOR_INTERNAL_PORT=8014
