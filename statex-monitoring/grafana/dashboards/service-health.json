{
  "id": 2,
  "uid": "service-health",
  "title": "Service Health",
  "tags": ["statex", "health", "monitoring"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Service Status Overview",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=~\"statex.*\"}",
          "legendFormat": "{{job}} - {{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Service Response Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds{job=~\"statex.*\"}[5m])",
          "legendFormat": "{{job}} Response Time"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 3,
      "title": "Service Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=~\"statex.*\"}[5m])",
          "legendFormat": "{{job}} Requests/sec"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}