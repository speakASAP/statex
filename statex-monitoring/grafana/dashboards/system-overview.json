{
  "id": 3,
  "uid": "system-overview",
  "title": "System Overview",
  "tags": ["statex", "system", "overview"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "System CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=~\"statex.*\"}[5m]) * 100",
          "legendFormat": "{{job}} CPU %"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "System Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=~\"statex.*\"} / 1024 / 1024",
          "legendFormat": "{{job}} Memory MB"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "System Network I/O",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(process_network_io_bytes_total{job=~\"statex.*\"}[5m])",
          "legendFormat": "{{job}} Network I/O"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}