# Host/NAS storage for submissions (outside Docker). Optional.
HOST_UPLOAD_DIR=/srv/statex/submissions
# Explicit submission upload dir (overrides service default). Optional.
SUBMISSION_UPLOAD_DIR=/srv/statex/submissions
# StateX Platform Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database
DATABASE_URL=postgresql://statex:statex_password@localhost:5432/statex
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=5

# Message Broker
BROKER_URL=amqp://statex:statex_password@localhost:5672
BROKER_TOPIC=statex
BROKER_RETRY_ATTEMPTS=3
BROKER_RETRY_DELAY=1000

# Object Storage
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=statex-dev
S3_ACCESS_KEY=statex
S3_SECRET_KEY=statex_password
S3_REGION=us-east-1

# Security
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=604800

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:${GRAFANA_PORT:-3000}

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=contact@statex.cz
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=txt,pdf,doc,docx,jpg,jpeg,png,mp3,wav,mp4,zip
UPLOAD_PATH=/app/storage

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=StateX Platform
CORS_ORIGINS=["https://statex.cz", "https://www.statex.cz"]

# Logging
LOG_FORMAT=json
LOG_LEVEL=INFO
LOG_FILE=/app/logs/statex.log

# External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Dashboard Service Ports
DASHBOARD_EXTERNAL_PORT=8020
DASHBOARD_INTERNAL_PORT=8020

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=INFO
# JWT_SECRET_KEY=your-production-secret-key
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_BUCKET=statex-prod
# CORS_ORIGINS=["https://statex.cz"]
