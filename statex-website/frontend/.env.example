# Environment Variables Template for StateX Multilingual System
# Copy this file to .env.local for development or .env.production for production
# Replace all placeholder values with your actual configuration

# Environment
NODE_ENV=development

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=StateX
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/statex_development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
API_SECRET_KEY=your-development-api-secret-key

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-development-nextauth-secret

# External Services (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Email Configuration (Optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@statex.eu
SMTP_PASS=your-email-password

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# File Storage (Optional)
NEXT_PUBLIC_STORAGE_URL=http://localhost:3000/uploads
STORAGE_ACCESS_KEY=your-storage-access-key
STORAGE_SECRET_KEY=your-storage-secret-key

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
NEXT_PUBLIC_ENABLE_MULTILINGUAL=true

# Performance
NEXT_PUBLIC_CDN_URL=http://localhost:3000
ENABLE_COMPRESSION=false
ENABLE_CACHING=true