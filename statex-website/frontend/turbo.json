{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "VITEST_*"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "VITEST_*"]
    },
    "test:ui": {
      "dependsOn": ["^test:ui"],
      "outputs": [],
      "env": ["NODE_ENV", "VITEST_*"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "VITEST_*"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "outputs": []
    },
    "format": {
      "dependsOn": ["^format"],
      "outputs": []
    },
    "format:check": {
      "dependsOn": ["^format:check"],
      "outputs": []
    },
    "build-stats": {
      "dependsOn": ["^build-stats"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "ANALYZE"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    }
  }
} 